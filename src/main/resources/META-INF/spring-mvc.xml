                     <!--allowed-headers="content-type"-->
                     <!--exposed-headers="content-type"-->
                     <!--allow-credentials="true"-->
                     <!--max-age="3600" />-->

    <!--</mvc:cors>-->


    <mvc:default-servlet-handler />

</beans>